<div class="mt-4">
  <h3>Sửa tác giả</h3>
  <form
    method="POST"
    action="/admin/authors/{{author.author_id}}/edit?_method=PUT"
  >
    <div class="mb-3">
      <label for="author_name" class="form-label">Tên tác giả</label>
      <input
        type="text"
        class="form-control"
        id="author_name"
        name="author_name"
        required
        value="{{author.author_name}}"
      />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value="{{author.email}}"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{author.description}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
  </form>
</div>