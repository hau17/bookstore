<h2>Quản lý tác giả</h2>
<a href="/admin/authors/add"><button class="btn btn-primary">Thêm tác giả</button></a>
<div class="mb-3">
  <label for="author-status" class="form-label">Lọc tác giả:</label>
  <select id="author-status" class="form-select select2">
    <option value="" {{#unless status}}selected{{/unless}}>Tất cả</option>
    <option value="1" {{#if (eq status '1')}}selected{{/if}}>Đang hoạt động</option>
    <option value="0" {{#if (eq status '0')}}selected{{/if}}>Ngừng hoạt động</option>
  </select>
</div>

<table id="authorTable" class="display">
    <thead>
        <tr> 
            <th>ID</th>
            <th>Tên tác giả</th>
            <th>email</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        {{#each authors}}
            <tr class="author-row" 
                data-id="{{this.author_id}}"
                data-name="{{this.author_name}}"
                data-email="{{this.email}}"
                data-description="{{this.description}}">
                <td>{{this.author_id}}</td>
                <td>{{this.author_name}}</td>
                <td>{{this.email}}</td>
                <td>
                    {{#if (eq this.status '1')}}
                        <span >Đang hoạt động</span>
                    {{else}}
                        <span >Ngừng hoạt động</span>
                    {{/if}}
                </td>
                <td>
                    <a href="/admin/authors/{{this.author_id}}/edit">
                        <button class="btn btn-primary" data-id="{{this.author_id}}">Sửa</button>
                    </a>
                   {{#if (eq this.status 1)}} 
                    <!-- Nếu tác giả đang hoạt động thì cho phép Khóa -->
                    <button class="btn btn-warning btn-toggle-status" 
                        data-id="{{this.author_id}}"
                        data-status="{{this.status}}"
                        data-type="authors">
                        Khóa
                    </button>
                    {{else}}
                    <!-- Nếu tác giả đã ngừng hoạt động thì cho phép Mở khóa -->
                    <button class="btn btn-success btn-toggle-status" 
                        data-id="{{this.author_id}}"
                        data-status="{{this.status}}"
                        data-type="authors">
                        Mở
                    </button>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{!-- chi tiết tác giả --}}
<div class="modal fade" id="modal-author-detail-admin" tabindex="-1" aria-labelledby="detailAuthorLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailAuthorLabel">Chi tiết tác giả</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="col-form-label"><strong>ID tác giả:</strong></label>
                    <span id="detail-author-id"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label"><strong>Tên tác giả:</strong></label>
                    <span id="detail-author-name"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label"><strong>Email:</strong></label>
                    <span id="detail-author-email"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label"><strong>Mô tả:</strong></label>
                    <span id="detail-author-description" class="d-block text-pre-wrap text-break"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/admin/author.js"></script>