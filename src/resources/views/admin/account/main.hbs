<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4">Thông Tin Tài Khoản</h2>
      {{#if account}}
        <div class="card">
          <div class="card-body">
            <div class="row mb-3">
              <label class="col-sm-3 col-form-label fw-bold">Email:</label>
              <div class="col-sm-9">
                <p class="form-control-plaintext">{{account.email}}</p>
              </div>
            </div>

            <div class="row mb-3">
              <label class="col-sm-3 col-form-label fw-bold">Họ và Tên:</label>
              <div class="col-sm-9">
                <p class="form-control-plaintext">{{account.fullname}}</p>
              </div>
            </div>

            <div class="row mb-3">
              <label class="col-sm-3 col-form-label fw-bold">Chức vụ:</label>
              <div class="col-sm-9">
                <p class="form-control-plaintext">
                  <span>{{account.role}}</span>
                </p>
              </div>
            </div>

            <div class="row mb-3">
              <label class="col-sm-3 col-form-label fw-bold">Ngày tạo:</label>
              <p>{{formatDate account.created_at}}</p>
            </div>
            <div class="row mt-4">
              <div class="col-sm-12">
                <a href="/admin/account/edit" class="btn btn-primary">
                  <i class="bi bi-pencil"></i>
                  Chỉnh sửa thông tin
                </a>
                <a
                  href="/admin/account/change-password"
                  class="btn btn-warning"
                >
                  <i class="bi bi-key"></i>
                  Thay đổi mật khẩu
                </a>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>