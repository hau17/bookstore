<div class="container">
    <h2>Chỉnh sửa nhân viên</h2>
    <form action="/admin/users/{{user.user_id}}/edit" method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mb-3">
            <label for="fullname" class="form-label">Họ tên</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{user.fullname}}" required>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Vai trò</label>
            <select class="form-select" id="role" name="role" required>
                <option value="staff" {{#if (eq user.role 'staff')}}selected{{/if}}>Staff</option>
                <option value="manager" {{#if (eq user.role 'manager')}}selected{{/if}}>Manager</option>
                <option value="admin" {{#if (eq user.role 'admin')}}selected{{/if}}>Admin</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="/admin/users" class="btn btn-secondary">Hủy</a>
    </form>
</div>
