<div class="container my-4 px-3 px-md-4">
  <!-- Header Section -->
  <div class="mb-4">
    <h2 class="fs-3 fs-md-2 mb-2">
      <i class="bi bi-credit-card"></i> Thanh toán
    </h2>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/products">Sản phẩm</a></li>
        <li class="breadcrumb-item"><a href="/cart">Giỏ hàng</a></li>
        <li class="breadcrumb-item active">Thanh toán</li>
      </ol>
    </nav>
  </div>

  <div class="row g-4">
    <!-- Products Section -->
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="bi bi-bag-check"></i> Sản phẩm đã chọn
            <span class="badge bg-light text-primary ms-2">{{products.length}}</span>
          </h5>
        </div>
        <div class="card-body p-0">
          <!-- Desktop Table View -->
          <div class="table-responsive d-none d-md-block">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col" class="ps-3">Sản phẩm</th>
                  <th scope="col" class="text-center">Đơn giá</th>
                  <th scope="col" class="text-center">Số lượng</th>
                  <th scope="col" class="text-end pe-3">Thành tiền</th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                  <tr>
                    <td class="ps-3">
                      <div class="fw-semibold">{{this.book_title}}</div>
                    </td>
                    <td class="text-center">
                      {{formatPrice this.selling_price}} ₫
                    </td>
                    <td class="text-center">
                      <span class="badge bg-secondary">x{{this.quantity}}</span>
                    </td>
                    <td class="text-end pe-3">
                      <strong class="text-danger">
                        {{formatPrice (multiply this.selling_price this.quantity)}} ₫
                      </strong>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          <!-- Mobile Card View -->
          <div class="d-md-none">
            {{#each products}}
              <div class="p-3 border-bottom">
                <h6 class="fw-semibold mb-2">{{this.book_title}}</h6>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="text-muted">Đơn giá:</span>
                  <span>{{formatPrice this.selling_price}} ₫</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="text-muted">Số lượng:</span>
                  <span class="badge bg-secondary">x{{this.quantity}}</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="fw-semibold">Thành tiền:</span>
                  <strong class="text-danger fs-5">
                    {{formatPrice (multiply this.selling_price this.quantity)}} ₫
                  </strong>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Info & Summary Section -->
    <div class="col-12 col-lg-4">
      <div class="card shadow-sm border-0 sticky-lg-top" style="top: 1rem;">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="bi bi-person-check"></i> Thông tin đặt hàng
          </h5>
        </div>
        <div class="card-body">
          <form method="POST" action="{{#if (eq mode 'cart')}}/checkout/cart{{else}}/checkout/buy/{{products.[0].book_id}}{{/if}}">

            <!-- Delivery Address -->
            <div class="mb-3">
              <label for="address" class="form-label fw-semibold">
                <i class="bi bi-geo-alt"></i> Địa chỉ giao hàng
                <span class="text-danger">*</span>
              </label>
              <textarea 
                class="form-control" 
                id="address" 
                name="address" 
                rows="3"
                placeholder="Nhập địa chỉ nhận hàng..."
                required
              >{{customer.address}}</textarea>
              <div class="form-text">Vui lòng nhập địa chỉ chi tiết để giao hàng chính xác</div>
            </div>

            <!-- Phone Number -->
            <div class="mb-3">
              <label for="phoneNumber" class="form-label fw-semibold">
                <i class="bi bi-telephone"></i> Số điện thoại
                <span class="text-danger">*</span>
              </label>
              <input 
                type="tel" 
                class="form-control" 
                id="phoneNumber" 
                name="phoneNumber" 
                value="{{customer.phone_number}}"
                placeholder="0123456789"
                pattern="[0-9]{10,11}"
                required
              >
              <div class="form-text">Nhập số điện thoại liên hệ (10-11 số)</div>
            </div>

            <!-- Payment Method -->
            <div class="mb-4">
              <label for="paymentId" class="form-label fw-semibold">
                <i class="bi bi-wallet2"></i> Phương thức thanh toán
                <span class="text-danger">*</span>
              </label>
              <select class="form-select" id="paymentId" name="paymentId" required>
                <option value="" disabled selected>-- Chọn phương thức --</option>
                <option value="1">
                  <i class="bi bi-cash"></i> Thanh toán khi nhận hàng (COD)
                </option>
                <option value="2">
                  <i class="bi bi-bank"></i> Chuyển khoản ngân hàng
                </option>
              </select>
            </div>

            <hr>

            <!-- Order Summary -->
            <div class="mb-3">
              <h6 class="fw-semibold mb-3">
                <i class="bi bi-receipt"></i> Tóm tắt đơn hàng
              </h6>
              
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Số lượng sản phẩm:</span>
                <span class="fw-semibold">{{products.length}} sản phẩm</span>
              </div>
              
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Tạm tính:</span>
                <span>{{formatPrice grandTotal}} ₫</span>
              </div>
              
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Phí vận chuyển:</span>
                <span class="text-success">Miễn phí</span>
              </div>
              
              <hr>
              
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="fs-5 fw-bold">Tổng cộng:</span>
                <strong class="text-danger fs-4">{{formatPrice grandTotal}} ₫</strong>
              </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
              <i class="bi bi-check-circle"></i> Đặt hàng ngay
            </button>
            
            <a href="/cart" class="btn btn-outline-secondary w-100">
              <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
            </a>

          </form>
        </div>
      </div>

      <!-- Security Badge -->
      <div class="card border-0 bg-light mt-3">
        <div class="card-body text-center py-2">
          <small class="text-muted">
            <i class="bi bi-shield-check text-success"></i>
            Thông tin của bạn được bảo mật
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/client/checkout.js"></script>