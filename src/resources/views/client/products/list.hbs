<div class="container mt-4">

    <div class="row mb-4 align-items-end">
        
        <div class="col-12 col-lg-6 mb-3">
            <label for="searchInput" class="form-label fw-bold">Tìm kiếm sản phẩm:</label>
            <div class="input-group">
                <input 
                    type="text" 
                    id="product_search-input"
                    class="form-control" 
                    placeholder="Nhập sách/ tác giả/ nhà xuất bản cần tìm" 
                    aria-label="Tìm kiếm sản phẩm"
                    value="{{search}}"
                />
                <button id="product_btn-search" class="btn btn-primary" type="button">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
            </div>
        </div>        
        <div class="col-6 col-md-4 col-lg-4 mb-3">
            <label for="categorySelect" class="form-label fw-bold">Lọc loại sản phẩm:</label>
            <select id="product-filter" class="form-select">
                <option value="">-- Chọn tất cả --</option>
                {{#each categories}}
                    <option 
                        value="{{this.category_id}}"
                        {{#if (eq ../selectedCategoryId this.category_id)}}selected{{/if}}
                    >
                        {{this.category_name}}
                    </option>
                {{/each}}
            </select>
        </div>
    </div>
    
    <hr>
    
    <h2 class="mb-4">Danh Sách Sản Phẩm</h2>
    <div 
        id="product-list"
        class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4" 
    >
        {{#each products}}
            <div class="col">
                <div 
                    class="card h-100 shadow-sm"
                    data-id="{{this.book_id}}"
                    data-title="{{this.book_title}}"
                    data-price={{this.price}}
                    data-discount={{this.discount_percentage}}
                    data-stock={{this.stock_quantity}}
                    data-description="{{this.description}}"
                    data-image="{{this.image_path}}"
                    data-category="{{this.category_name}}"
                    data-author="{{this.author_name}}"
                    data-publisher="{{this.publisher_name}}"
                >
                    <img 
                        src="{{this.image_path}}" 
                        class="card-img-top product-img-fixed" 
                        alt="Ảnh sản phẩm" 
                    />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="{{this.book_title}}">{{this.book_title}}</h5>
                        <p class="card-text fw-bold mt-auto">
                            <span class="text-danger">Giá bán: {{formatPrice this.selling_price}} VND</span>
                            {{#if this.discount_percentage}}
                                <span class="badge bg-danger ms-2">-{{this.discount_percentage}}%</span>
                            {{/if}}
                            <br>
                            <small class="text-muted text-decoration-line-through">{{formatPrice this.original_price}} VND</small>
                        </p>
                        <div class="d-grid gap-2 d-md-block mt-2">
                            <a href="/products/{{this.book_id}}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i> Xem
                            </a>
                            <button type="button" class="btn btn-outline-primary btn-sm product__btn--add-to-cart" data-id="{{this.book_id}}">
                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                            </button>
                            <a href="/checkout/buy/{{this.book_id}}">                            <button type="button" class="btn btn-primary btn-sm btn-buy-now" data-book-id="{{this.book_id}}">
                                <i class="bi bi-bag"></i> Mua
                            </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<!-- Pagination -->
<nav aria-label="Product pagination" class="mt-5 mb-5">
    <ul class="pagination justify-content-center">
        {{#if hasPrev}}
            <li class="page-item">
                <a class="page-link" href="?page={{prevPage}}{{#if search}}&search={{search}}{{/if}}{{#if selectedCategoryId}}&category={{selectedCategoryId}}{{/if}}">
                    <i class="bi bi-chevron-left"></i> Trang trước
                </a>
            </li>
        {{else}}
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="bi bi-chevron-left"></i> Trang trước
                </span>
            </li>
        {{/if}}

        <li class="page-item">
            <span class="page-link">Trang {{page}} / {{totalPages}}</span>
        </li>

        {{#if hasNext}}
            <li class="page-item">
                <a class="page-link" href="?page={{nextPage}}{{#if search}}&search={{search}}{{/if}}{{#if selectedCategoryId}}&category={{selectedCategoryId}}{{/if}}">
                    Trang sau <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        {{else}}
            <li class="page-item disabled">
                <span class="page-link">
                    Trang sau <i class="bi bi-chevron-right"></i>
                </span>
            </li>
        {{/if}}
    </ul>
</nav>

<script src="/js/client/product.js"></script>

