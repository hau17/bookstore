<div class="container my-4">
  <h2 class="text-center mb-4">Danh sách sản phẩm</h2>
  
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-start">
    {{#each products}}
    <div class="col">
      <div class="card" style="width: 18rem;">
        <img src="{{this.image_path}}" class="card-img-top" alt="ảnh sản phẩm">
        <div class="card-body">
          <h5 class="card-title">{{this.book_title}}</h5>
          <p class="card-text">giá tiền:{{this.price}} VND</p>
          <a href="#" class="btn btn-primary">mua</a>
          <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="text-center mt-4">
    <a href="/products/add" class="btn btn-success">Thêm sản phẩm</a>
  </div>
</div>
