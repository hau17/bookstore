<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="bi bi-key"></i>
            Đổi mật khẩu
          </h5>
        </div>
        <div class="card-body">
          <form
            method="POST"
            action="/account/change-password"
            id="changePasswordForm"
          >
            <div class="mb-3">
              <label for="oldPassword" class="form-label">Mật khẩu hiện tại:</label>
              <input
                type="password"
                class="form-control"
                id="oldPassword"
                name="oldPassword"
                required
              />
            </div>

            <div class="mb-3">
              <label for="newPassword" class="form-label">Mật khẩu mới:</label>
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>

            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Xác nhận mật khẩu
                mới:</label>
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
                required
              />
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary flex-grow-1">
                <i class="bi bi-check-circle"></i>
                Cập nhật mật khẩu
              </button>
              <a href="/account" class="btn btn-secondary flex-grow-1">
                <i class="bi bi-x-circle"></i>
                Hủy
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>