<div class="bg-dark text-white p-3 vh-100 position-fixed" style="width: 250px;">
  <h4 class="mb-4">Quản trị</h4>
  <ul class="nav flex-column">

    {{! ROLE: admin + manager → xem sản phẩm }}
    {{#if (or (eq user.role "admin") (eq user.role "manager"))}}
      <li class="nav-item mb-2">
        <a href="/admin/products" class="nav-link text-white">Sản phẩm</a>
      </li>
    {{/if}}

    {{! ROLE: admin + staff → xem đơn hàng }}
    {{#if (or (eq user.role "admin") (eq user.role "staff"))}}
      <li class="nav-item mb-2">
        <a href="/admin/orders" class="nav-link text-white">Đơn hàng</a>
      </li>
    {{/if}}

    {{! ROLE: admin + manager → quản lý khách hàng }}
    {{#if (or (eq user.role "admin") (eq user.role "manager"))}}
