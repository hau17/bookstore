      </li>

      <li class="nav-item mb-2">
        <a href="/admin/categories" class="nav-link text-white">Loại sản phẩm</a>
      </li>

      <li class="nav-item mb-2">
        <a href="/admin/imports" class="nav-link text-white">Nhập sách</a>
      </li>
    {{/if}}

    {{! ROLE: admin → quản lý nhân viên }}
    {{#if (eq user.role "admin")}}
      <li class="nav-item mb-2">
        <a href="/admin/users" class="nav-link text-white">Quản lí nhân viên</a>
      </li>
    {{/if}}
    <li class="nav-item mb-2">
      <a href="/admin/account" class="nav-link text-white">Tài khoản của tôi</a>
    </li>
    <li class="nav-item mb-2">
      <a href="/admin/logout" class="nav-link text-white">Đăng xuất</a>
    </li>

